<h3 class="pageType">Posts</h3>

{{#each posts}}
    <h3>{{title.rendered}}</h3>
    <p>{{{content.rendered}}}</p>
{{/each}}

{{#if showPrevLink}}
    <a href="/posts?page={{prevPageNumber}}">Previous Page</a>
{{/if}}

